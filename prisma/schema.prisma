// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Expense {
  id           String   @id @default(uuid())
  amount       Int
  date         DateTime
  note         String?
  location     String?
  category     Category @relation(fields: [categoryType, categoryName], references: [type, name])
  categoryType String
  categoryName String
}

model Income {
  id           String   @id @default(uuid())
  amount       Int
  date         DateTime
  note         String?
  category     Category @relation(fields: [categoryType, categoryName], references: [type, name])
  categoryType String
  categoryName String
}

model Budget {
  id            String   @id @default(uuid())
  category      Category @relation(fields: [categoryType, categoryName], references: [type, name])
  initAmount    Int
  currentAmount Int
  resetPeriod   String
  categoryType  String
  categoryName  String
}

model Category {
  type     String
  name     String
  emoji    String
  color    String
  Expenses Expense[]
  Incomes  Income[]
  Budgets  Budget[]

  @@id([type, name])
}
